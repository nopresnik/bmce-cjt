  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "start:prod": "NODE_ENV=production node ./dist/src/app.js",
    "start:dev": "NODE_ENV=dev nodemon -r tsconfig-paths/register 'src/app.ts' --ignore 'src/client/*'",
    "client": "cd src/client && yarn start",
    "build": "rm -rf dist/ && tsc --noImplicitAny",
    "test": "NODE_ENV=test mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"test/**/*.spec.ts\"",
    "test-coverage": "NODE_ENV=test nyc mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"test/**/*.spec.ts\"",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "mongoose": "^5.12.12",
    "prettier": "^2.3.0",
    "pusher": "^5.0.0",
    "shelljs": "^0.8.4",
    "tsyringe": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.18",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "chai": "^4.3.4",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "husky": "^6.0.0",
    "if-env": "^1.0.4",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
